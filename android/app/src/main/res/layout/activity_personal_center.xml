<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    tools:context=".PersonalCenterActivity">

    <Button
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="9dp"
        android:text="个人资料"
        app:layout_constraintBottom_toTopOf="@+id/title_boundry4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="9dp"
        android:text="购物车"
        app:layout_constraintBottom_toTopOf="@+id/title_boundry4"
        app:layout_constraintStart_toStartOf="@+id/person" />

    <Button
        android:id="@+id/purchased"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="9dp"
        android:text="已买商品"
        app:layout_constraintBottom_toTopOf="@+id/title_boundry4"
        app:layout_constraintEnd_toEndOf="@+id/title_boundry4" />

    <TextView
        android:id="@+id/person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="个人中心"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/back2"
        app:layout_constraintStart_toEndOf="@+id/seller"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="我是商人"
        app:layout_constraintBottom_toTopOf="@+id/title_boundry2"
        app:layout_constraintEnd_toStartOf="@+id/person"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="返回主界面"
        app:layout_constraintBottom_toTopOf="@+id/title_boundry2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/person" />

    <TextView
        android:id="@+id/title_boundry2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/boundary2"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/person" />

    <TextView
        android:id="@+id/title_boundry4"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="96dp"
        android:layout_weight="1"
        android:background="@drawable/boundary2"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/person" />

</androidx.constraintlayout.widget.ConstraintLayout>